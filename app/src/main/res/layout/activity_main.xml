<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tableLayoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TableLayout"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:padding="8dp"
            android:stretchColumns="*"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tableLayoutTitle">

            <!-- Row 1 -->
            <TableRow android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/button_1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_plus"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/button_4"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_5"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_6"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_minus"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="-"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow android:layout_marginBottom="4dp">
                <TextView
                    android:id="@+id/button_7"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_8"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_9"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="9"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_divide"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="/"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/button_dot"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="."
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_0"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_equals"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="="
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/button_multiply"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="#4A6D8C"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:text="*"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>

        <!-- GridLayout Calculator -->

        <TextView
            android:id="@+id/gridLayoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="8dp"
            android:text="GridLayout"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/gridLayoutContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tableLayout" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gridLayoutContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gridLayoutTitle">

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:padding="8dp"
                android:rowCount="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Row 1 -->
                <Button
                    android:id="@+id/grid_button_1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_plus"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="+"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <!-- Row 2 -->
                <Button
                    android:id="@+id/grid_button_4"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="4"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_5"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_6"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_minus"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="-"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <!-- Row 3 -->
                <Button
                    android:id="@+id/grid_button_7"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_8"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="8"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_9"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="9"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_divide"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="2"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="/"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <!-- Row 4 -->
                <Button
                    android:id="@+id/grid_button_dot"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="."
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_0"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_equals"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="="
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/grid_button_multiply"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_row="3"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:layout_columnWeight="1"
                    android:layout_margin="2dp"
                    android:backgroundTint="#4A6D8C"
                    android:text="*"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
